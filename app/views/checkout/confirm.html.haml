%main.container.general-main-wrap
  = render partial: 'progress'
  .row.mb-20
    .col-sm-3
      %h3.general-subtitle= t('settings.shipping')
      = render partial: 'addresses_short', locals: { address: @addresses.shipping }
    .col-sm-3
      %h3.general-subtitle= t('settings.billing')
      = render partial: 'addresses_short', locals: { address: @addresses.billing }
    .col-sm-3
      %h3.general-subtitle= t('confirm.shipments')
      %p.general-address
        = current_order.delivery.name
        = link_to t('confirm.edit'), wizard_path(:delivery), class: 'general-edit clickable-step'
        %br
        = current_order.delivery.duration
    .col-sm-3
      %h3.general-subtitle= t('confirm.payment_info')
      - credit_card_presenter = CreditCardPresenter.new(current_order.credit_card)
      %p.general-address
        = credit_card_presenter.secret_card_number
        = link_to t('confirm.edit'), wizard_path(:payment), class: 'general-edit clickable-step'
        %br
        = current_order.credit_card.mm_yy
  = render partial: 'list_of_items', locals: { order_items: @order_items }
  = render partial: 'order_summary', locals: { order: current_order }
  .text-center
    = button_to t('checkout.place_order'), wizard_path, method: :put, class: 'btn btn-default mb-20'
