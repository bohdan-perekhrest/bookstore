%table.general-summary-table
  %tr
    %td
      %p.font-16 Item Total:
    %td
      %p.font-16= currency_with_price current_order.subtotal
  %tr
    %td
      %p.font-16 Coupon
    %td
      - if current_order.coupon.present?
        %p.font-16= currency_with_price current_order.coupon.value
      - else
        %p.font-16= currency_with_price
  %tr
    %td
      %p.font-16 Order Total:
    %td
      %p.font-16= currency_with_price current_order.total
