- presenter = HeaderPresenter.new(session[:order_id])
%header.navbar.navbar-default
  .container
    .navbar-header
      %button.navbar-toggle.pull-left{type: "button", 'data-toggle': "collapse", 'data-target': "#navbar"}
        %span.sr-only
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      = link_to 'Bookstore', root_path, class: 'navbar-brand'
      = link_to order_index_path, class: 'shop-link pull-right visible-xs' do
        %span.shop-icon
          %span.shop-quantity= presenter.order_items_count
    = link_to order_index_path, class: 'shop-link pull-right hidden-xs' do
      %span.shop-icon
        %span.shop-quantity= presenter.order_items_count
    #navbar.navbar-collapse.collapse.pl-30{'aria-expanded': "false"}
      .visible-xs
        %button.close{type: "button", 'aria-label': "Close"}
          %span{'aria-hidden': "true"} &times;
        %ul.nav.navbar-nav
          %li
            = link_to 'Home', root_path
          %li
            = link_to 'Shop', books_path
          - if current_user
            %li
              = link_to 'Settings', address_path
            %li  
              = link_to 'My Orders', account_order_index_path
          - else
            %li
              = link_to 'Log In', new_user_session_path
      .hidden-xs
        %ul.nav.navbar-nav
          %li
            = link_to 'Home', root_path
          %li.dropdown
            = link_to 'Shop', books_path
          - if current_user
            %li.dropdown
              %a.nav-link.dropdown-toggle{href:'#', id:'navbarDropdown', role:'button', 'data-bs-toggle':'dropdown', 'aria-haspopup': 'true', 'aria-expanded':'false'} My account
              %ul.dropdown-menu{'aria-labelledby':'navbarDropdown'}
                %li
                  = link_to 'Settings', address_path
                %li  
                  = link_to 'My Orders', account_order_index_path
            %li
              = link_to 'Log Out', destroy_user_session_path, method: :delete
          - else
            %li
              = link_to 'Log In', new_user_session_path
