%header.navbar.navbar-default
  .container
    .navbar-header
      %button.navbar-toggle.pull-left{type: "button", 'data-toggle': "collapse", 'data-target': "#navbar"}
        %span.sr-only
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      = link_to t('header.logo'), root_path, class: 'navbar-brand'
      = link_to order_index_path, class: 'shop-link pull-right visible-xs' do
        %span.shop-icon
          %span.shop-quantity= @header_presenter.order_items_count
    = link_to order_index_path, class: 'shop-link pull-right hidden-xs' do
      %span.shop-icon
        %span.shop-quantity= @header_presenter.order_items_count
    #navbar.navbar-collapse.collapse.pl-30{'aria-expanded': "false"}
      .visible-xs
        %button.close{type: "button", 'aria-label': "Close"}
          %span{'aria-hidden': "true"} &times;
        %ul.nav.navbar-nav
          %li
            = link_to t('button.home'), root_path
          %li
            = link_to t('button.shop'), books_path
          %li
            - if current_user
              = link_to t('button.my_account'), address_path
            - else
              = link_to t('button.log_in'), new_user_session_path
      .hidden-xs
        %ul.nav.navbar-nav
          %li
            = link_to t('button.home'), root_path
          %li.dropdown
            = link_to t('button.shop'), books_path
          - if current_user
            %li
              = link_to t('button.my_account'), address_path
            %li
              = link_to t('button.log_out'), destroy_user_session_path, method: :delete
          - else
            %li
              = link_to t('button.log_in'), new_user_session_path
