%main.container
  = render partial: 'users/settings/tab'
  .tab-pane
    .row.mb-60
      .col-sm-5
        %p.in-gold-500.font-18.mb-25= t('settings.e-mail')
        = simple_form_for(resource, url: privacy_path, method: :patch, html: {class: 'general-form-md'}) do |f|
          = f.hidden_field :update_email, value: true
          .form-group.mb-35
            = f.label :email, class: 'control-label input-label'
            = f.email_field :email, class: 'form-control', id: 'email', placeholder: 'Enter your email', value: ''
          .general-text-align
            = f.submit 'Save', class: 'btn btn-default mb-35'
      .col-sm-5.col-sm-offset-1
        %p.in-gold-500.font-18.mb-25= t('settings.password')
        = simple_form_for(:user, url: privacy_path, method: :patch, html: {class: 'general-form-md divider-lg-bottom pb-25'}) do |f|
          = f.hidden_field :update_password, value: true
          .form-group.mb-30
            = f.label :current_password, class: 'control-label input-label'
            = f.password_field :current_password, class: 'form-control', id: 'oldPassword', placeholder: 'Old Password'
          .form-group.mb-30
            = f.label :password, class: 'control-label input-label'
            = f.password_field :password, class: 'form-control', id: 'password', placeholder: 'New Password'
          .form-group.mb-40
            = f.label :password_confirmation, class: 'control-label input-label'
            = f.password_field :password_confirmation, class: 'form-control', id: 'confirmPassword', placeholder: 'Confirm Password'
          .general-text-align
            = f.submit 'Save', class: 'btn btn-default mb-10'
      .col-sm-12
        %p.in-gold-500.font-18.mb-25= t('settings.remove_account')
        = form_with(url: registration_path(resource_name), method: :delete) do |f|
          .general-settings-btn
            = f.submit t('settings.please_remove_account'), class: 'btn btn-default mb-20'
          .form-group.checkbox.general-settings-checkbox
            %label.checkbox-label
              = f.check_box :remove, hidden: 'true'
              %span.checkbox-icon
                %i.fa.fa-check
              %span.checkbox-text= t('settings.im_agree_lost_all_data')
  %script{src: "https://use.fontawesome.com/67602d7308.js"}
