.general-cart-item.divider-lg-bottom
  = link_to order_item_path(order_id: session[:order_id], id: item_presenter.order_item.id), method: :delete, class: 'close general-cart-close', 'aria-label': 'Close'  do
    %span{'aria-hidden': "true"} &times;
  .general-img-wrap-table
    = image_tag(item_presenter.book.image, class: 'cart-img-shadow', alt: item_presenter.book.name)
  %p.title= item_presenter.book.name
  %table.table
    %tr
      %td
        %span.in-grey-600= t('cart.price')
      %td
        %span.font-16.in-gold-500= currency_with_price item_presenter.book.price
    %tr
      %td.vertical-middle
        %span.in-grey-600= t('cart.quantity')
      %td
        .input-group
          = link_to order_item_path(id: item_presenter.order_item.id, order_item: {quantity: item_presenter.order_item.quantity-1}), class: 'input-link', id: "order_#{item_presenter.order_item.id}_minus", method: :put, remote: true do
            %i.fa.fa-minus.line-height-40
          %input.form-control.quantity-input{type: 'text', value: item_presenter.order_item.quantity, readonly: true}
          = link_to order_item_path(id: item_presenter.order_item.id, order_item: {quantity: item_presenter.order_item.quantity+1}), class: 'input-link', id: "order_#{item_presenter.order_item.id}_plus", method: :put, remote: true do
            %i.fa.fa-plus.line-height-40
    %tr
      %td
        %span.in-grey-600= t('cart.subtotal')
      %td
        %span.font-16.in-gold-500= currency_with_price item_presenter.order_item.total_price
