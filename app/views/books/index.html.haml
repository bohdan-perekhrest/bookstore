%main.container
  %h1.general-title-margin= t('page.book.index.catalog')
  .hidden-xs.clearfix
    = render 'dropdown'
    = render 'categories'
  .mb-120
    .row
      - @books.each do |set_books|
        - set_books.each do |book|
          .col-xs-6.col-sm-3
            .general-thumb-wrap
              .thumbnail.general-thumbnail
                %img.img-shadow.general-thumbnail-img{src: book.image_url, alt: "design-book_service"}
                .thumb-hover
                  .general-thumb-link-wrap
                    = link_to book_path(id: book.id), class: 'thumb-hover-link' do
                      %i.fa.fa-eye.thumb-icon{'aria-hidden': "true"}
                    %a.thumb-hover-link{href: "#"}
                      %i.fa.fa-shopping-cart.thumb-icon
            .general-thumb-info
              %p.title= book.name
              %p.font-16.in-gold-500= "â‚¬#{book.price}"
              %span.divider-sm
              %p.lead.small= book.authors.map(&:full_name).join(', ')
        .row.mb-25
    .text-center
      %button.btn.btn-primary View More
    = pagy_nav(@pagy).html_safe
  %script{src: "https://use.fontawesome.com/67602d7308.js"}