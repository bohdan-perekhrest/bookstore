= simple_form_for(:review, url: book_reviews_path(book_id: book_id)) do |f|
  %p.general-info-text= t('review.score')
  .mb-15
    %i.fa.fa-star.rate-empty
    %i.fa.fa-star.rate-empty
    %i.fa.fa-star.rate-empty
    %i.fa.fa-star.rate-empty
    %i.fa.fa-star.rate-empty
  .row
    .col-md-8
      .mb-40
        .form-group
          = f.label :title, class: 'control-label input-label in-grey-600'
          = f.text_field :title, class: 'form-control', id: 'title'
        .form-group
          = f.label 'Review', class: 'control-label input-label in-grey-600'
          = f.text_area :text, class: 'form-control', id: 'review', size: '50x7', style: 'resize: none'
      .text-right
        = f.submit t('button.post'), class: 'btn btn-default mb-20'
